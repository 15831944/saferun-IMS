		 }
 </div>
        </div>
    </div>
</div>

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
	
    		var productionscheduleid = 0;
		var ObjectState = "Modified";   
                                 
             var $scheduledetailsdatagrid = $('#scheduledetails_datagrid');
                        $(document).ready(function () {
				productionscheduleid = $('#Id', 'form').val();
                $('form').submit(function () {
					if (!$('form').valid())
						return false;
                    //var token = $('[name=__RequestVerificationToken]').val();
                    //var serializedForm = $(this).serialize();
                    var actionurl = $(this).attr('action');
                    						if (!scheduledetails_endEditing())
								return false;                                         
                        var scheduledetails = $scheduledetailsdatagrid.datagrid('getChanges');
                                         
                     var newitem = {
						

                                                        BeginDate: $('#BeginDate', 'form').val(),
                                                        CompletedDate: $('#CompletedDate', 'form').val(),
                        								//primaryKey   
								Id: productionscheduleid,
                                                        OrderDate: $('#OrderDate', 'form').val(),
                                                        OrderKey: $('#OrderKey', 'form').val(),
                                                        Ower: $('#Ower', 'form').val(),
                                                        Remark: $('#Remark', 'form').val(),
                                                        ScheduleDate: $('#ScheduleDate', 'form').val(),
                        								//detailTables
                                ScheduleDetails: scheduledetails ,
                                                        ScheduleNo: $('#ScheduleNo', 'form').val(),
                        								WorkId: $('#WorkId :selected','form').val(),
						                                CreatedDateTime: $('#CreatedDateTime', 'form').val(),
                                                        CreatedUserId: $('#CreatedUserId', 'form').val(),
                                                        LastEditDateTime: $('#LastEditDateTime', 'form').val(),
                                                        LastEditUserId: $('#LastEditUserId', 'form').val(),
                        								CustomerId: $('#CustomerId :selected','form').val(),
						                        ObjectState:ObjectState 
                    };
                    $.ajax({
                        url: actionurl,
                        type: "POST",
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify(newitem),
                        success: function (result) {
                            if (result.success) {
                                self.location = "/ProductionSchedules/Index";
                            } else {
                                alert(result.err);
                            }
                            
                        },
                        error: function (result) {
                            console.log(result.statusText + result.responseText);
                            alert(result.statusText + result.responseText);
                        }
                    });
                    return false;
                    

                });
            });
      
      </script>

}
