									$dg.datagrid('removeFilterRule', 'ParentComponentId');
								} else {
									$dg.datagrid('addFilterRule', {
										field: 'ParentComponentId',
									    op: 'equal',
										value: value
                                });
                            }
                            $dg.datagrid('doFilter');
                        }
					}
		   },
		   		   
		   ]);
        })
     </script>
