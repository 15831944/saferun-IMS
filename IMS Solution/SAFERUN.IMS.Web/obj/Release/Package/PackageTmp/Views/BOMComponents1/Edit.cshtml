		 }
 </div>
        </div>
    </div>
</div>

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
	
    		var bomcomponentid = 0;
		var ObjectState = "Modified";   
                                 
             var $componentsdatagrid = $('#components_datagrid');
                        $(document).ready(function () {
				bomcomponentid = $('#Id', 'form').val();
                $('form').submit(function () {
					if (!$('form').valid())
						return false;
                    //var token = $('[name=__RequestVerificationToken]').val();
                    //var serializedForm = $(this).serialize();
                    var actionurl = $(this).attr('action');
                    						if (!components_endEditing())
								return false;                                         
                        var components = $componentsdatagrid.datagrid('getChanges');
                                         
                     var newitem = {
						

                                                        ALTSku: $('#ALTSku', 'form').val(),
                        								//detailTables
                                Components: components ,
                                                        ComponentSKU: $('#ComponentSKU', 'form').val(),
                                                        ConsumeQty: $('#ConsumeQty', 'form').val(),
                                                        ConsumeTime: $('#ConsumeTime', 'form').val(),
                                                        Deploy: $('#Deploy', 'form').val(),
                                                        DesignName: $('#DesignName', 'form').val(),
                                                        GraphSKU: $('#GraphSKU', 'form').val(),
                        								//primaryKey   
								Id: bomcomponentid,
                                                        Locator: $('#Locator', 'form').val(),
                                                        NoPur: $('#NoPur', 'form').val(),
                                                        ProductionLine: $('#ProductionLine', 'form').val(),
                                                        RejectRatio: $('#RejectRatio', 'form').val(),
                                                        Remark1: $('#Remark1', 'form').val(),
                                                        Remark2: $('#Remark2', 'form').val(),
                                                        Status: $('#Status', 'form').val(),
                                                        StockSKU: $('#StockSKU', 'form').val(),
                        								ParentComponentId: $('#ParentComponentId :selected','form').val(),
														SKUId: $('#SKUId :selected','form').val(),
						                                CreatedDateTime: $('#CreatedDateTime', 'form').val(),
                                                        CreatedUserId: $('#CreatedUserId', 'form').val(),
                                                        DesignPricture1: $('#DesignPricture1', 'form').val(),
                                                        DesignPricture2: $('#DesignPricture2', 'form').val(),
                                                        DesignPrictureURL1: $('#DesignPrictureURL1', 'form').val(),
                                                        DesignPrictureURL2: $('#DesignPrictureURL2', 'form').val(),
                                                        LastEditDateTime: $('#LastEditDateTime', 'form').val(),
                                                        LastEditUserId: $('#LastEditUserId', 'form').val(),
                                                ObjectState:ObjectState 
                    };
                    $.ajax({
                        url: actionurl,
                        type: "POST",
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify(newitem),
                        success: function (result) {
                            if (result.success) {
                                self.location = "/BOMComponents/Index";
                            } else {
                                alert(result.err);
                            }
                            
                        },
                        error: function (result) {
                            console.log(result.statusText + result.responseText);
                            alert(result.statusText + result.responseText);
                        }
                    });
                    return false;
                    

                });
            });
      
      </script>

}
