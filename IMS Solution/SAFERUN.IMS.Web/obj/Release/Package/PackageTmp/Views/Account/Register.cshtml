@model SAFERUN.IMS.Web.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LoginViewLayout.cshtml";
    ViewBag.Title = "Register";
}

<div class="login-container">
    <a href="./"><img width="100" height="30" src="~/images/logo-login@2x.png" /></a>
    <form action="/Account/Register" method="post">
        <div class="form-group">
            <input class="form-control" type="text" id="Email" name="Email" value="输入您的邮箱地址">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" id="Password" name="Password" value="输入密码">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" id="ConfirmPassword" name="ConfirmPassword" value="确认密码"><input type="submit" value="&#xf054;">
        </div>
        <div class="form-options">
            <label class="checkbox"><input type="checkbox"><span>同意《注册条款》</span></label>
        </div>
    </form>
    
    <p class="signup">
        已经有账户了？ <a href="/Account/Login">立即登录</a>
    </p>
</div>
 
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
